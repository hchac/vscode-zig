{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Extension",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Launch Debug Adapter as Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/out/zigDebug.js",
            "args": [
                "--server=4711"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Extension + Debug Server",
            "configurations": [
                "Launch Extension",
                "Launch Debug Adapter as Server"
            ]
        }
    ]
}